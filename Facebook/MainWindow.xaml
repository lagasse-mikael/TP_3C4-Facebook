<Window x:Class="Facebook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Facebook"
        mc:Ignorable="d"
        Title="Debug Window" Height="450" Width="800" FontFamily="MS PGothic">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <Grid>
                    <Image x:Name="banner" Width="300" HorizontalAlignment="Left"/>
                    <Image x:Name="profile" Width="70" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>
                <TextBlock x:Name="currentUser" FontSize="27" TextWrapping="Wrap"></TextBlock>
            </WrapPanel>
            <TextBlock x:Name="windowText" FontSize="27"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
